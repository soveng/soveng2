---
import Base from "@/layouts/Base.astro";
import books from "@/data/books.js";
const page_title = "Books";
---

<Base title={page_title}>
  <section class="section">
    <div class="container">
      <div class="row mb-8 justify-center">
        <div class="col-auto">
          <h1 class="h1 mb-8 text-center">{page_title}</h1>
        </div>
      </div>
      <div class="row gy-4 justify-center">
        {
          books.map((book: any) => (
            <div class="col-12 sm:col-6 md:col-4">
              <div class="rounded-lg bg-theme-light p-8 text-center dark:bg-darkmode-theme-light">
                <a
                  href={book.links[0].url}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <img
                    class="mx-auto mb-4"
                    src={book.cover}
                    alt={book.title}
                    width="150"
                    height="200"
                  />
                </a>
                <h4 class="mb-2">
                  <a
                    href={book.links[0].url}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    {book.title}
                  </a>
                </h4>
                <p class="mb-2">{book.author}</p>
                <p class="mb-4">{book.description}</p>
                <ul class="book-links">
                  {book.links.map((link: any) => (
                    <li>
                      <a
                        href={link.url}
                        target="_blank"
                        rel="noopener noreferrer nofollow"
                        aria-label={link.name}
                        class="inline-flex items-center justify-center w-8 h-8 border-2 border-t-white border-l-white border-r-gray-600 border-b-gray-600 bg-gray-300 hover:bg-gray-200 active:border-t-gray-600 active:border-l-gray-600 active:border-r-white active:border-b-white active:translate-x-0.5 active:translate-y-0.5"
                      >
                        <i class="fa-brands fa-readme"></i>
                        <span class="sr-only">{link.name}</span>
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Base> 